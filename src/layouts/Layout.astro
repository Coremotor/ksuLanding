---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        /* --font-size-base: clamp(1.1rem, 0.2vw + 0.91rem, 1.3rem);
        --font-size-lg: clamp(1.4rem, 0.8vw + 1.2rem, 1.6rem);
        --font-size-xl: clamp(2rem, 2vw + 1.85rem, 3rem); */

        --font-size-base: calc(0.2vw + 1rem);
        --font-size-lg: calc(0.8vw + 1rem);
        --font-size-xl: calc(2vw + 1rem);

        --color-text: black;
        --color-bg: white;
        --color-bg-second: #e6ebf1;
        --color-bg-third: #033277;
        --color-bg-gradient: linear-gradient(
          180deg,
          rgba(255, 255, 255, 0) 0%,
          #21386c 100%
        );
      }

      html {
        width: 100%;
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
      }

      a {
        color: var(--color-text);
      }

      h2 {
        font-size: var(--font-size-lg);
      }

      body {
        padding: 0;
        margin: 0;
      }

      @font-face {
        font-family: "MrDafoe-Regular";
        src: url("/fonts/MrDafoe-Regular.ttf") format("ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Comfortaa";
        src: url("/fonts/Comfortaa.ttf") format("ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
