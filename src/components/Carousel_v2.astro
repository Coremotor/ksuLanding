---
interface Props {
  DOMId: string;
  title: string;
  images: {
    title: string;
    src: string;
    page?: string;
  }[];
  withBackground: boolean;
}

const { title, images, DOMId, withBackground }: Props = Astro.props;
---

<script>
  import Swiper, { Pagination, Navigation } from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import "swiper/css/navigation";

  const swiper_v2 = new Swiper(".swiper_v2", {
    modules: [Pagination, Navigation],
    pagination: {
      el: ".swiper-pagination",
      type: "bullets",
    },
    slidesPerView: 1,
    centeredSlides: true,
    breakpoints: {
      1024: {
        slidesPerView: 2,
      },
    },
  });
</script>

<div class={`${withBackground ? "bg" : ""} wrapper`}>
  <section id={DOMId} class="container">
    <h2 class="title">{title}</h2>

    <div class="swiper_v2">
      <div class="swiper-wrapper">
        {
          images.map((i) => (
            <div class="swiper-slide image-container">
              <img class="image" src={i.src} alt="image" />
            </div>
          ))
        }
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </section>
</div>

<style>
  .wrapper {
    padding: 60px 0;
    margin-bottom: 40px;
  }

  .container {
    max-width: 1280px;
    padding: 0 10px;
    margin: 0 auto;
  }

  .bg {
    background-color: var(--color-bg-second);
  }

  .title {
    text-align: center;
    margin-top: 0;
  }

  .swiper_v2 {
    width: 100%;
    position: relative;
    margin-bottom: 30px;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
  }

  .image-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
  }

  .swiper-pagination {
    bottom: -30px !important;
  }

  .image {
    width: 85%;
    object-fit: cover;
  }

  @media (max-width: 500px) {
    .wrapper {
      margin-bottom: 0;
    }

    .swiper_v2 {
      width: 100%;
      margin-left: -10px;
    }
  }
</style>
