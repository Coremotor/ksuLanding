---
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import ClientsTypes from "components/ClientsTypes.astro";
import AboutMe from "components/AboutMe.astro";
import Problems from "components/Problems.astro";
import Consultation from "components/Consultation.astro";
import Details from "components/Details";
import Therapy from "components/Therapy.astro";
import Carousel from "components/Carousel.astro";

import { diploms, certificates, makePhotosArray } from "../data/pictures";
---

<Layout title="Клинический психолог с сахарным диабетом" isMainPage>
  <Hero desc="Психологическая поддержка людей с сахарным диабетом" />
  <ClientsTypes />
  <Problems />
  <AboutMe />
  <Consultation />
  <Details client:load />
  <Therapy />
  <Carousel
    DOMId="education"
    title="Образование"
    images={diploms}
    withLink
    withBackground
    withTitle
    arrowsUp
  />
  <div
    style={{ height: "500px", backgroundColor: "white", textAlign: "center" }}
  >
    Отзывы
  </div>
  <Carousel
    DOMId="certificates"
    title="Сертификаты"
    images={certificates}
    withLink={false}
    withBackground
    withTitle={false}
    arrowsUp={false}
  />
  <Carousel
    DOMId="gallery"
    title="Галерея"
    images={makePhotosArray()}
    withLink={false}
    withBackground={false}
    withTitle={false}
    arrowsUp={false}
  />
</Layout>
