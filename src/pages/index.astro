---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ClientsTypes from "../components/ClientsTypes.astro";
import AboutMe from "../components/AboutMe.astro";
import Problems from "../components/Problems.astro";
import Consultation from "../components/Consultation.astro";
import { Details } from "../components/Details";
import Therapy from "../components/Therapy.astro";
import Carousel from "../components/Carousel.astro";

import { diploms, photos } from "../data/pictures";
---

<Layout title="Психология диабета" isMainPage>
  <div class="container">
    <Hero desc="Психологическая поддержка людей с сахарным диабетом" />
    <ClientsTypes />
    <AboutMe />
    <Problems />
    <Consultation />
    <Details client:load />
    <Therapy />
    <Carousel DOMId="education" title="Образование" images={diploms} withLink />
    <Carousel
      DOMId="gallary"
      title="Галерея"
      images={photos}
      withLink={false}
    />
  </div>
</Layout>
