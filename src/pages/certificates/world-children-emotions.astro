---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import About from "../../layouts/About.astro";
import AboutDiplom from "../../components/AboutDiplom.astro";
import Image from "../../components/Image.astro";
import Buttons from "../../components/Buttons.astro";
import { routesList } from "data/routes";
import { nextPage } from "helpers";
import { certificatesRoutes } from "data/routes";

const list = [
  "учимся определять эмоции;",
  "учимся говорить о своих эмоциях;",
  "развиваем внутренний и внешний эмоциональный интеллект;",
  "обучение управлению эмоциями.",
];

const next = nextPage(routesList(certificatesRoutes), Astro.url.pathname);
---

<Layout title="Мир детских эмоций" isMainPage={false}>
  <Hero desc="Онлайн - тренинг: Мир детских эмоций" />
  <Image src="/assets/images/diploms/world_children_emotions.jpg" />

  <About
    DOMId="world-children-emotions"
    title="Область профессиональной деятельности"
  >
    <AboutDiplom
      desc="Эмоции – важная часть нашей жизни. Они организуют и мотивируют поведение, помогая преодолевать жизненные трудности и препятствия. А положительные эмоции делают нашу жизнь насыщеннее и ярче!"
      list={list}
      diplom=""
      vkr=""
    />
  </About>

  <Buttons link={next} />
</Layout>
